<UserControl x:Class="Microsoft.BuildProgressBar.DocumentElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.BuildProgressBar"
             mc:Ignorable="d" Height="Auto" Width="460">
    <Grid Name="grid" Margin="0,0,0,0" Height="Auto">
        <Grid Name="buttonGrid" Height="50" VerticalAlignment="Top" Margin="0,0,0,0">
            <Button Name="testButton" Content="Text" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="460" Background="LightGreen" FontSize="15" Click="testButton_Click"/>
            <CheckBox Name="checkBox" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" RenderSize="30, 30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="20" Width="20" Checked="checkBox_Checked" Unchecked="checkBox_Unchecked">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                </CheckBox.LayoutTransform>
            </CheckBox>
        </Grid>
